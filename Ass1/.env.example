# ==========================================
# AWS Configuration (Shared)
# ==========================================
# The AWS Region to deploy resources in (e.g., us-east-1)
AWS_REGION=
# The name of the S3 bucket for storing input/output files
S3_BUCKET_NAME=

# ==========================================
# Queue Configuration (Shared)
# ==========================================
# SQS Queue for LocalApp -> Manager communication
LOCAL_APP_INPUT_QUEUE=
# SQS Queue for Manager -> LocalApp communication
LOCAL_APP_OUTPUT_QUEUE=
# SQS Queue for Manager -> Worker communication
WORKER_INPUT_QUEUE=
# SQS Queue for Worker -> Manager communication
WORKER_OUTPUT_QUEUE=

# ==========================================
# SQS Configuration (Shared)
# ==========================================
# Visibility timeout in seconds (should be larger than processing time)
VISIBILITY_TIMEOUT_SECONDS=
# Long polling wait time in seconds (max 20)
WAIT_TIME_SECONDS=
# Max messages to retrieve in one batch (max 10)
MAX_MESSAGES=

# ==========================================
# EC2 Configuration (LocalApp -> Manager)
# ==========================================
# AMI ID for the Manager instance (e.g., Amazon Linux 2023)
MANAGER_AMI_ID=
# Instance type for the Manager (e.g., t2.micro for free tier)
MANAGER_INSTANCE_TYPE=
# IAM Role name for the Manager instance profile
MANAGER_IAM_ROLE=
# Security Group ID for the Manager
MANAGER_SECURITY_GROUP=
# Key Pair name for SSH access
MANAGER_KEY_NAME=

# ==========================================
# EC2 Configuration (Manager -> Worker)
# ==========================================
# AMI ID for Worker instances (e.g., Amazon Linux 2023)
WORKER_AMI_ID=
# Instance type for Workers (e.g., t2.micro)
WORKER_INSTANCE_TYPE=
# IAM Role name for Worker instance profiles
WORKER_IAM_ROLE=
# Security Group ID for Workers (optional)
WORKER_SECURITY_GROUP=
# Key Pair name for Workers (optional)
WORKER_KEY_NAME=
# Maximum number of Worker instances to scale out to
MAX_WORKER_INSTANCES=

# ==========================================
# Local App Behavior
# ==========================================
# Interval in seconds to poll for Manager status
POLL_INTERVAL_SECONDS=

# ==========================================
# Manager Behavior
# ==========================================
# Time in minutes to wait before terminating if no tasks are pending
IDLE_TIMEOUT_MINUTES=
# Interval in seconds to check queue size and scale workers
SCALING_INTERVAL_SECONDS=

# ==========================================
# Worker Behavior
# ==========================================
# Maximum time in seconds to process a single message
MAX_PROCESSING_TIME_SECONDS=
# Temporary directory for processing files
TEMP_DIR=
# Max messages for a Worker to consume at once (usually 1)
WORKER_MAX_MESSAGES=
